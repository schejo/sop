                          onSelect="numTrans.value = self.selectedItem.value;"> <!-- onSelect="numTrans.value = self.selectedItem.value; "  -->
                    <template name="model">
                        <comboitem label="${each.useario}" value="${each.useario}"/>
                    </template>
                </combobox>
                    </n:div>
                </n:div>
                
